    {{ content_for_header }}

    <!-- Add Swiper styles -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">

    <!-- Add Swiper script -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js" async></script>

    <style>
      /* Root Styles */

      :root {
        --color-primary: #007bff;
        --color-secondary: #6c757d;
        --color-success: rgb(41, 206, 79);
        --color-danger: #dc3545;
        --color-warning: #ffc107;
        --color-info: #17a2b8;
        --color-light: #f8f9fa;
        --color-light-hover: #ffffff;
        --color-dark: #121212;
        --color-dark-hover: #2f2f2f;
        --color-border: rgba(0, 0, 0, 0.085);

        --spacing-xs: 0.25rem;
        --spacing-sm: 0.5rem;
        --spacing-md: 1rem;
        --spacing-lg: 1.5rem;
        --spacing-xl: 3rem;
        --spacing-xxl: 4rem;

        --br-sm: 4px;
        --br-md: 12px;
        --br-lg: 24px;

        --br-pill: 50rem;
        --br-circle: 50%;
        --br: 0.25rem;

        --font-family-base: 'Public Sans', sans-serif;

        --font-size-base: 14px;
        --font-size-xs: 10px;
        --font-size-sm: 12px;
        --font-size-md: 14px;
        --font-size-lg: 20px;
        --font-size-xl: 32px;
        --font-size-xxl: 60px;
        --font-size-xxxl: 80px;

        --line-height-base: 1.5;
        --line-height-sm: 1.25;

        --box-shadow-lg: 10px 10px 0px rgba(0, 0, 0, 0.05);
        --box-shadow-md: 5px 5px 0px rgba(0, 0, 0, 0.05);
        --box-shadow-sm: 2px 2px 0px rgba(0, 0, 0, 0.05);

        --box-shadow-blur: 0 10px 40px rgba(0, 0, 0, 0.1), 0 5px 20px rgba(0, 0, 0, 0.05),
          0px 8px 8px rgba(0, 0, 0, 0.1);
      }
    </style>
  </head>

  <body>
    {% sections 'header-group' %}

    <section class="boop">
      {{ content_for_layout }}
    </section>

    {% sections 'footer-group' %}
  </body>
</html>
