{% stylesheet %}
  header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--spacing-lg) 0;

    @media (max-width: 1024px) {
      padding: 1rem 1rem 1rem 0;
    }
  }

  header a {
    position: relative;
    text-decoration: none;
    color: var(--color-dark);
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    font-size: var(--font-size-lg);
    font-weight: 500;

    span {
      border-bottom: 2px solid transparent;

      &.header__active-menu-item {
        border-bottom: 2px solid var(--color-dark);
      }
    }
  }

  header a sup {
    position: absolute;
    right: 2px;
    bottom: 0;
    overflow: hidden;
    max-width: var(--page-margin);
    background: var(--color-dark);
    color: var(--color-light);
    width: 18px;
    height: 18px;
    min-width: 18px;
    min-height: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--br-circle);
    font-size: var(--font-size-sm);
  }

  .header-icons svg {
    width: 2rem;
  }

  header .logo {
    display: flex;
    align-items: center;
    height: 100%;
    width: auto;
    min-width: 40px;
  }

  header .header-menu,
  header .header-icons {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.header",
  "settings": [
