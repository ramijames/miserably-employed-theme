{% comment %}
  Homepage Hero Section
{% endcomment %}

<div
  class="homepage-hero"
  {% if section.settings.hero_background_image != blank %}
    style="background-image: url({{ section.settings.hero_background_image | image_url: 'master' }});"
  {% else %}
    style="background-image: url('{{ 'homepage-background.jpg' | asset_url }}');"
  {% endif %}
>
  <div class="hero-content-vibe">
    <p class="tagline">{{ section.settings.hero_tagline }}</p>
    <p class="quote">"{{ section.settings.hero_quote }}"</p>
  </div>
  <div class="hero-content">
    <h1>{{ section.settings.hero_title }}</h1>
    <div class="hero-buttons">
      <a class="btn btn-primary" href="{{ section.settings.shop_link }}">{{ section.settings.shop_link_text }}</a>
      <a class="btn btn-primary" href="{{ section.settings.tee_link }}">{{ section.settings.tee_link_text }}</a>
    </div>
  </div>
</div>

{% stylesheet %}
  .homepage-hero {
    background-color: var(--color-dark);
    color: var(--color-light);
    display: flex;
    flex-direction: column;
    padding: var(--spacing-xxl);
    justify-content: flex-start;
    align-items: flex-start;
    height: 720px;
    text-align: center;
    gap: var(--spacing-lg);
    border-radius: var(--br-lg);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .hero-content-vibe {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 100%;
    gap: var(--spacing-md);
  }

  .hero-content-vibe p {
    font-size: var(--font-size-lg);
    font-weight: 500;
    margin: 0;
  }

  .hero-content-vibe .tagline {
    opacity: 0.4;
  }

  .hero-content-vibe .quote {
    font-style: italic;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
    text-align: left;
    max-width: 512px;
  }

  .hero-content h1 {
    font-size: var(--font-size-xxxl);
    line-height: 90px;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Homepage Hero",
  "settings": [
    {
      "type": "text",
      "id": "hero_tagline",
      "label": "Hero Tagline",
      "default": "â€”Wearable satire for the workplace"
    },
    {
      "type": "text",
      "id": "hero_quote",
      "label": "Hero Quote",
      "default": "I can not handle it anymore!"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero Title",
      "default": "Tees that say what you really think."
    },
    {
      "type": "text",
      "id": "shop_link",
      "label": "Shop Link URL",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "shop_link_text",
      "label": "Shop Link Text",
      "default": "Shop Bestsellers"
    },
    {
      "type": "text",
      "id": "tee_link",
      "label": "Tee Link URL",
      "default": "/collections/tees"
    },
    {
      "type": "text",
      "id": "tee_link_text",
      "label": "Tee Link Text",
      "default": "Check out this tee"
    },
    {
      "type": "image_picker",
      "id": "hero_background_image",
      "label": "Background Image"
    }
  ],
  "presets": [
    {
      "name": "Homepage Hero",
      "category": "Custom"
    }
  ]
}
{% endschema %}
