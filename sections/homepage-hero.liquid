{% comment %}
  Homepage Hero Section
{% endcomment %}

<div class="homepage-hero">
  <div class="hero-content-vibe">
    <p>{{ settings.hero_tagline }}</p>
    <h1>{{ settings.hero_quote }}</h1>
  </div>
  <div class="hero-content">
    <h1>{{ settings.hero_title }}</h1>
    <div class="hero-buttons">
      <a class="btn btn-primary" href="{{ settings.shop_link }}">{{ settings.shop_link_text }}</a>
      <a class="btn btn-primary" href="{{ settings.tee_link }}">{{ settings.tee_link_text }}</a>
    </div>
  </div>
</div>

{% stylesheet %}
  .homepage-hero {
    background-color: var(--color-dark);
    color: var(--color-light);
    display: flex;
    flex-direction: row;
    padding: var(--spacing-xl);
    justify-content: center;
    align-items: center;
    height: 720px;
    text-align: center;
  }

  .homepage-hero h1 {
    font-size: 2.5rem;
    margin-bottom: 20px;
  }

  .homepage-hero p {
    font-size: 1.25rem;
    color: #333;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Homepage Hero",
  "settings": [
    {
      "type": "text",
      "id": "hero_tagline",
      "label": "Hero Tagline",
      "default": "â€”Wearable satire for the workplace"
    },
    {
      "type": "text",
      "id": "hero_quote",
      "label": "Hero Quote",
      "default": "I can not handle it anymore!"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero Title",
      "default": "Tees that say what you really think."
    },
    {
      "type": "text",
      "id": "shop_link",
      "label": "Shop Link URL",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "shop_link_text",
      "label": "Shop Link Text",
      "default": "Shop Bestsellers"
    },
    {
      "type": "text",
      "id": "tee_link",
      "label": "Tee Link URL",
      "default": "/collections/tees"
    },
    {
      "type": "text",
      "id": "tee_link_text",
      "label": "Tee Link Text",
      "default": "Check out this tee"
    }
  ],
  "presets": [
    {
      "name": "Homepage Hero",
      "category": "Custom"
    }
  ]
}
{% endschema %}
