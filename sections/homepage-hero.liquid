{% comment %}
  Homepage Hero Section
{% endcomment %}

<div
  class="homepage-hero"
  {% if section.settings.hero_background_image != blank %}
    style="background-image: url({{ section.settings.hero_background_image | image_url: 'master' }});"
  {% else %}
    style="background-image: url('{{ 'homepage-background.jpg' | asset_url }}');"
  {% endif %}
>
  <div class="hero-content-vibe">
    <p class="tagline">{{ section.settings.hero_tagline }}</p>
    <p class="quote">"{{ section.settings.hero_quote }}"</p>
  </div>
  <div class="hero-content">
    <h1>{{ section.settings.hero_title }}</h1>
    <div class="hero-buttons">
      <a class="button primary" href="{{ section.settings.shop_link }}">{{ section.settings.shop_link_text }}</a>
      <a class="button" href="{{ section.settings.tee_link }}">{{ section.settings.tee_link_text }}</a>
    </div>
  </div>
</div>

{% stylesheet %}
  .homepage-hero {
    background-color: var(--color-dark);
    color: var(--color-light);
    display: flex;
    flex-direction: column;
    padding: var(--spacing-xxl);
    justify-content: flex-start;
    align-items: flex-start;
    height: 720px;
    text-align: center;
    gap: var(--spacing-lg);
    border-radius: var(--br-md);
    background-size: cover;
    background-position: bottom center;
    background-repeat: no-repeat;
    position: relative;
  }

  @media screen and (max-width: 1024px) {
    .homepage-hero {
      padding: var(--spacing-lg);
      height: calc(100vh - 90px - var(--spacing-md));
      justify-content: space-between;
      background-position: bottom center;
    }
  }

  .homepage-hero::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(-20deg, rgba(0, 0, 0, 0) 25%, rgba(0, 0, 0, 0.35) 75%);
    border-radius: var(--br-md);
    z-index: 1;
  }

  @media screen and (max-width: 1024px) {
    .homepage-hero::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(180deg, rgba(0, 0, 0, 0) 25%, rgba(0, 0, 0, 0.55) 75%);
      border-radius: var(--br-md);
      z-index: 1;
    }
  }

  .hero-content-vibe {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 100%;
    gap: var(--spacing-md);
    z-index: 2;
    position: relative;
  }

  .hero-content-vibe p {
    font-size: var(--font-size-lg);
    font-weight: 500;
    margin: 0;
  }

  @media screen and (max-width: 600px) {
    .hero-content-vibe p {
      font-size: var(--font-size-md);
      text-align: left;
    }
  }

  .hero-content-vibe .tagline {
    opacity: 0.4;
  }

  .hero-content-vibe .quote {
    font-style: italic;
  }

  @media screen and (max-width: 1024px) {
    .hero-content-vibe .quote {
      display: none;
    }
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
    text-align: left;
    max-width: 512px;
    z-index: 2;
    position: relative;
  }

  @media screen and (max-width: 1024px) {
    .hero-content {
      max-width: 100%;
    }
  }

  .hero-content h1 {
    font-size: var(--font-size-xxxl);
    line-height: 90px;
    text-wrap: balance;
  }

  @media screen and (max-width: 1024px) {
    .hero-content h1 {
      font-size: var(--font-size-xxl);
      line-height: 60px;
    }
  }

  @media screen and (max-width: 600px) {
    .hero-content h1 {
      font-size: var(--font-size-xl);
      line-height: 30px;
    }
  }

  .hero-buttons {
    display: flex;
    flex-direction: row;
    gap: var(--spacing-md);
  }

  @media screen and (max-width: 600px) {
    .hero-buttons {
      flex-direction: column;
      width: 100%;
    }
  }
{% endstylesheet %}

