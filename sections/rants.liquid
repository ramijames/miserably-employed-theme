{%- assign blog_handle = section.settings.blog -%}
{%- assign blog = blogs[blog_handle] -%}

<div class="rants">
  <div class="rants-header">
    <h2 class="rants-section-title">
      {{- 'header-rants.svg' | inline_asset_content -}}
      {{ section.settings.rants_title }}
    </h2>
    <a href="{{ blog.url }}" class="button category show-all">
      Browse
      {{- 'arrow-right.svg' | inline_asset_content -}}
    </a>
  </div>

  <div class="rants-articles">
    {% if blog.articles.size == 0 %}
      <p class="no-articles">No articles available.</p>
    {% endif %}
    {% for article in blog.articles limit: 4 %}
      <a href="{{ article.url }}" class="rants-article">
        {% if article.image %}
          {{ article.image | image_url: width: 1000 | image_tag }}
        {% endif %}
      </a>
    {% endfor %}
  </div>
</div>

{% stylesheet %}
  .rants {
    display: grid;
    gap: var(--spacing-md);
    width: 100%;
    padding: var(--spacing-xxl) 0;

    .rants-header {
      display: flex;
      justify-content: space-between;
      flex-direction: row;
      width: 100%;
      align-items: center;
      margin-bottom: var(--spacing-lg);

      @media screen and (max-width: 1024px) {
        flex-direction: column;
        align-items: flex-start;
        gap: 0;
      }
    }

    .rants-section-title {
      margin: 0;
      font-size: var(--font-size-xxl);
      display: flex;
      flex-direction: row;
      align-items: center;
      gap: var(--spacing-xs);
      color: var(--color-dark);

      @media screen and (max-width: 1024px) {
        font-size: var(--font-size-xl);
      }

      .show-all {
        text-decoration: none;
        font-size: var(--font-size-lg);
        padding: var(--spacing-sm) var(--spacing-md);

        @media screen and (max-width: 768px) {
          font-size: var(--font-size-md);
        }
      }
    }

    .rants-articles {
      display: grid;
      grid-template-columns: 1fr 1fr;
      width: 100%;
      gap: var(--spacing-xl);
      align-items: stretch;
      justify-items: stretch;
      position: relative;

      @media screen and (max-width: 1024px) {
        grid-template-columns: 1fr;
        gap: var(--spacing-sm);
      }

      .rants-article {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        color: var(--color-dark);
        border-radius: var(--br-md);
        border: 1px solid var(--color-border);
        transition: all 0.3s ease;
        overflow: hidden;

        img {
          width: 100%;
          height: auto;
          transition: all 0.3s ease;
        }

        &:hover {
          img {
            transform: scale(1.02);
          }
        }
      }
      .no-articles {
        grid-column: 1 / -1;
        text-align: center;
        color: var(--color-dark);
        font-size: var(--font-size-lg);
        padding: var(--spacing-md);
      }
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Rants",
  "settings": [
    {
      "type": "text",
      "id": "rants_title",
      "label": "Rants Title",
      "default": "Rants"
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "Select Blog",
      "info": "Choose the blog to display articles from."
    }
  ],
  "presets": [
    {
      "name": "Rants",
      "category": "Custom"
    }
  ]
}
{% endschema %}
